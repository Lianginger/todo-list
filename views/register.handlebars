<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">Register</h1>
      <form action="/users/register" method="post">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" name="name" id="name" class="form-control" placeholder="Enter your name" value="{{name}}">
        </div>

        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" name="email" id="email" class="form-control" placeholder="Enter email" value="{{email}}">
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" name="password" id="password" class="form-control" placeholder="Enter password">
        </div>

        <div class="form-group">
          <label for="password2">Confirm Password</label>
          <input type="password" name="password2" id="password2" class="form-control" placeholder="Confirm password">
        </div>

        <button type="submit" class="btn btn-primary btn-block">Register</button>
      </form>
      <span class="text-danger">{{errorMessage}}</span>
      <p class="mt-4">
        Have an Account? <a href="/users/login">Login</a>
      </p>
    </div>
  </div>
</div>